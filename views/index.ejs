<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add_user" class="border-shadow">
                    <span class="text-gradient"><i class="far fa-user"></i>  Add User</span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <!-- <th>ID</th> -->
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                     <% for(let user of users){ %>
                         
                            <tr>
                              
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.gender %></td>
                                <td><%= user.status %></td>
                                <td>
                                        <a href="/update_user/edit/<%= user._id %> " class="btn btn-sm btn-info"><i class="fas fa-user-edit"></i></a>
                                        <a href="/users/delete/<%= user._id %>" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </td>
                          </tr>
                          <% } %> 
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
